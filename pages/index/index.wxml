<view>
    <!-- 顶部搜索及地址 -->
    <view class="top_bar">
      <view class="city" bindtap="chooseCity">{{city}} <i class="iconfont icon-xiangxia"></i></view>
      <van-search value="{{ value }}" placeholder="请输入搜索关键词" />
      <view class="right_icon"><i class="iconfont icon-erji"></i></view>
    </view>
    <!-- 轮播大图 -->
    <swiper indicator-dots="true" indicator-color="#f4f4f4" indicator-active-color="#D0B17D" autoplay="true" interval='3000' circular='true'>
      <swiper-item wx:for="{{swiperList}}" wx:key="*this" class="swiper_item">
        <image src="{{item}}" class="swiper_img"></image>
      </swiper-item>
    </swiper>
</view>