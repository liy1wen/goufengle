swiper{
  height: 400rpx;
}
.swiper_img{
  width: 100%;
}
.recommend{
	padding: 20rpx;
}
.recommend_item{
	display: flex;
	flex-direction: column;
	overflow: hidden;
	/* border: 1px solid #CCCCCC; */
	border-radius: 20rpx;
	margin: 20rpx 0;
}
.big_content{
	width: 100%;
	height: 300rpx;
}
.big_img{
	width: 100%;
	height: 100%;
}
.small_content{
	width: 100%;
	height: 200rpx;
	display: flex;
}
.small_img{
	flex: 1;
	height: 100%;
}
.bg_color{
  background: #07bcb3;
}
.commodity{
  display: flex;
  flex-wrap: wrap;
}
.commodity_item{
  width: 375rpx;
  text-align: center;
  padding-bottom: 40rpx;
}
.commodity_img{
  width: 100%;
  height: 375rpx;
}
.commodity_describtion{
  padding: 4rpx 20rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
}
.old_price{
  color: #999999;
  text-decoration: line-through;
  font-size: 24rpx;
}
.discount{
  border: 1px solid #DD524D;
  color: #DD524D;
  padding: 0 4rpx;
  font-size: 20rpx;
  border-radius: 8rpx;
}
.card_title{
  width: 100%;
}
.title{
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  color: #000000;
  font-weight: bold;
  font-size:  32rpx;
}
.bottom{
  color: #999999;
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
}