/* pages/my/my.wxss */
.userinfo{
  background:#DCBC87;
  height: 220rpx;
  padding: 40rpx 30rpx;
  display: flex;
  /* align-items: center; */
}
.head_img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.userinfo_right{
  padding: 10rpx 30rpx;
    color: #ffffff;
}
.go_login,.tip_coupon{
  font-size: 30rpx;
}
.tip_coupon{
  margin-top: 20rpx;
  background: #FF4B5A;
  padding: 0 16rpx;
  line-height: 50rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}
.validate{
  font-size: 24rpx;
  margin-top: 20rpx;
}

.my_appointment{
  margin: 0 30rpx;
  /* height: 200rpx; */
  background: #ffffff;
  border-radius: 30rpx;
  position: relative;
  bottom: 100rpx;
  box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.1);
  padding: 30rpx;
}
.display{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mt{
  margin-top: 30rpx;
}
.title{
  font-size: 32rpx;
  color: #000000;
  font-weight: bold;
}
.look_more{
  font-size: 26rpx;
  color: #A8A8A8;
}
.tobedone,.finished{
  flex: 1;
  text-align: center;
  color: #5A5A5A;
  font-size: 30rpx;
}
.division{
  color: #E6E6E6;
}
